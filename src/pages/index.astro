---
import { compareDesc } from "date-fns";

import Layout from "../layouts/Layout.astro";
import Links from "../components/Links.astro";
import Link from "../components/Link.astro";
import { getCollection } from "astro:content";

const recentBlogPosts = (await getCollection("blog"))
  .sort((a, b) => compareDesc(a.data.date, b.data.date))
  .slice(0, 3);
---

<Layout>
  <div class="flex-1 flex items-center justify-center">
    <div class="flex flex-col items-center justify-center text-center">
      <h1
        class="mb-6 text-5xl text-gray-800 font-medium leading-none sm:text-6xl dark:text-gray-200"
      >
        Lynn Romich
      </h1>
      <div class="mb-10">
        <Links />
      </div>
      <div class="mb-10 mx-auto max-w-md flex flex-col gap-4 text-pretty">
        <p>ðŸ‘‹ Hi! I'm Lynn.</p>
        <p>
          I'm a software engineer looking to work with human-first,
          forward-thinking organizations. If that's you, please get in touch!
          You can see my resume <Link href="/resume">here</Link>.
        </p>
      </div>
      <div class="w-full mx-auto max-w-md text-start">
        <h2 class="mb-2 text-base font-medium">Recent blog posts</h2>
        <ul class="mb-2 flex flex-col gap-2 text-sm">
          {
            recentBlogPosts.map((post) => (
              <li>
                <a href={`/blog/${post.id}`} class="hover:underline">
                  {post.data.title}
                </a>
              </li>
            ))
          }
        </ul>
        <Link class="text-sm" href="/blog">All posts ðŸ¡’</Link>
      </div>
    </div>
  </div>
</Layout>
